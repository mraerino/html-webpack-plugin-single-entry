{
    "compilerOptions": {
        "target": "es2018",
        "lib": [
            "esnext",
        ],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "outDir": "lib",
        "declaration": true,
    },
    "include": [
        "src"
    ]
}
